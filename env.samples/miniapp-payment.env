# 小程序登录配置
WECHAT_MINIAPP_APPID=               # 微信小程序 AppID
WECHAT_MINIAPP_SECRET=             # 微信小程序 AppSecret
ALIPAY_MINIAPP_APPID=              # 支付宝小程序 AppID
ALIPAY_MINIAPP_PRIVATE_KEY=        # 支付宝小程序 RSA2 私钥（PKCS1/PKCS8，单行）
ALIPAY_MINIAPP_ALIPAY_PUBLIC_KEY=  # 支付宝公钥（验签用）
# mock 模式：本地联调可置 true，生产请改为 false
MINIAPP_MOCK_MODE=true

# 支付配置
# mock 模式：本地联调可置 true，生产请改为 false
PAYMENT_MOCK_MODE=true

# 微信支付（V3）
WECHAT_PAY_APPID=                  # 微信支付 AppID（与商户号绑定）
WECHAT_PAY_MCHID=                  # 微信商户号 MchID
WECHAT_PAY_API_V3_KEY=             # 微信支付 APIv3 密钥
WECHAT_PAY_NOTIFY_URL=             # 微信支付回调地址，如 https://your.domain/payments/notify/wechat

# 支付宝支付
ALIPAY_APPID=                      # 支付宝 AppID
ALIPAY_PRIVATE_KEY=                # 支付宝 RSA2 私钥（单行）
ALIPAY_SERVER_URL=https://openapi.alipay.com/gateway.do   # 支付宝网关（生产默认）
ALIPAY_NOTIFY_URL=                 # 支付宝回调地址，如 https://your.domain/payments/notify/alipay

# 云闪付 / 银联
UNIONPAY_MER_ID=                   # 银联/云闪付商户号
UNIONPAY_CERT_PATH=                # 签名证书路径（如 certs/xxxxx.pfx）
UNIONPAY_CERT_PWD=                 # 证书密码
UNIONPAY_NOTIFY_URL=               # 云闪付回调地址，如 https://your.domain/payments/notify/unionpay

